<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ljs.blog.mapper.CommentsMapper">

    <insert id="insertComments">
        insert into comments values (#{cid},#{eid},#{uid},#{pid},#{content},#{likeCount})
    </insert>

    <select id="selectAllCommentsByBlogId" resultType="Comments">
        select * from comments where eid=#{blogId}
    </select>


    <select id="selectCommByCid" resultType="Comments">
        select * from comments where uid=#{cid}
    </select>

    <delete id="deleteCommentsByCid">
        delete from comments where cid=#{cid}
    </delete>
</mapper>
